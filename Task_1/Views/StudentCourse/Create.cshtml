@model Task_1.ViewModel.StudentCoursesViewModel

@{
    ViewBag.Title = "Create Student Course";
}

<h2>Create Student Course</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StudentId" class="control-label">Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="Model.Students"></select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Courses</label>
        <div>
            @foreach (var course in Model.Courses)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="CourseIds" value="@course.Value" />
                        @course.Text
                    </label>
                </div>
            }
        </div>
        <span asp-validation-for="CourseIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
