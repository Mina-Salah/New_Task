<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

@model IEnumerable<Task_1.Models.Student>

@{
    ViewBag.Title = "قائمة الطلاب";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">قائمة الطلاب</h2>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>الكود</th>
                <th>الاسم</th>
                <th>البريد الإلكتروني</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Code</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>
                        <a href="@Url.Action("Details", "Student", new { id = student.Id })" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> عرض
                        </a>
                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> تعديل
                        </a>
                        <a href="@Url.Action("Delete", "Student", new { id = student.Id })" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Student")" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة طالب جديد
        </a>
    </div>
</div>